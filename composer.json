{
   "name": "odioncloud/web3-php",
   "description": "Supercharged PHP Web3 library",
   "license": "MIT",
   "keywords": [
      "php",
      "litehex",
      "web3",
      "ethereum",
      "eth"
   ],
   "homepage": "https://github.com/litehex/web3-php",
   "support": {
      "issues": "https://github.com/litehex/web3-php/issues",
      "source": "https://github.com/litehex/web3-php",
      "docs": "https://github.com/litehex/web3-php/blob/master/README.md"
   },
   "scripts": {
      "tests": "phpunit --configuration ./phpunit.xml --teamcity --colors=always"
   },
   "minimum-stability": "dev",
   "prefer-stable": true,
   "require": {
      "php": "^8.0",
      "ext-bcmath": "*",
      "ext-curl": "*",
      "ext-gmp": "*",
      "ext-mbstring": "*",
      "ext-openssl": "*",
      "guzzlehttp/guzzle": "^7.5",
      "kornrunner/keccak": "~1.0",
      "phpseclib/phpseclib": "~2.0.30",
      "shahradelahi/easy-http": "^v1.3.0",
      "shahradelahi/elliptic-php": "dev-master",
      "utilities-php/common": "*",
      "utilities-php/validator": "*"
   },
   "require-dev": {
      "fakerphp/faker": "^v1.20.0",
      "jetbrains/phpstorm-attributes": "^1.0",
      "kornrunner/ethereum-offline-raw-tx": "^0.5.0",
      "web3p/ethereum-tx": "^0.4.3",
      "vlucas/phpdotenv": "^v5.4.1",
      "furqansiddiqui/bip39-mnemonic-php": "0.1.4",
      "phpunit/phpunit": "^9.5.20"
   },
   "suggest": {
      "kornrunner/ethereum-offline-raw-tx": "Required for Offline signing of Ethereum transactions (~0.5.0)",
      "furqansiddiqui/bip39-mnemonic-php": "Required for BIP39 Mnemonic generation (~0.1.4)",
      "fakerphp/faker": "Required for Fake data generation (~v1.20.0)",
      "web3p/rlp": "Required for Ethereum RLP encoding (~0.3.5)",
      "web3p/ethereum-tx": "Required for Ethereum transaction signing (~0.4.3)",
      "vlucas/phpdotenv": "Required for loading .env files (~v5.4.1)"
   },
   "autoload": {
      "psr-4": {
         "Litehex\\Web3\\": "src/"
      },
      "files": [
         "helper.php"
      ]
   },
   "autoload-dev": {
      "psr-4": {
         "LitehexTests\\Web3\\": "tests/"
      }
   },
   "config": {
      "sort-packages": true,
      "optimize-autoloader": true
   }
}
